<h1>Listing orders</h1>

<table >
  <tr style="padding:5px; border-bottom: 2px solid;">
    <th style="padding:5px; border-bottom: 2px solid;">Name</th>
    <th style="padding:5px; border-bottom: 2px solid;">Address</th>
    <th style="padding:5px; border-bottom: 2px solid;">Email</th>
    <th style="padding:5px; border-bottom: 2px solid;">Pay type</th>
    <th></th>
    <th></th>
    <th></th>
  </tr>

<% @orders.each do |order| %>
  <tr style="padding:15px">
    <td style="padding:15px; border-bottom: 1px solid;"><%= order.name %></td>
    <td style="padding:15px; border-bottom: 1px solid;"><%= order.address %></td>
    <td style="padding:15px; border-bottom: 1px solid;"><%= order.email %></td>
    <td style="padding:15px; border-bottom: 1px solid;"><%= order.pay_type %></td>
    <td style="padding:15px; border-bottom: 1px solid;"><%= link_to 'Show', order %></td>
    <td style="padding:15px; border-bottom: 1px solid;"><%= link_to 'Edit', edit_order_path(order) %></td>
    
  </tr>
<% end %>
</table>

<br />

<%= link_to 'New Order', new_order_path %>
<p><%= will_paginate @orders %></p>
