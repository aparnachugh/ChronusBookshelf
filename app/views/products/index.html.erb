<div id="product_list" >
<h1>Listing products</h1>
<table>
<% @products.each do |p| %>
<tr class="<%= cycle('list_line_odd', 'list_line_even') %>" >
<td>
<%= image_tag(p.image, :class => 'list_image') %>
</td>
<td class="list_description" >
<dl>
<dt><%= p.title %></dt>
<dd><%= truncate(strip_tags(p.description),
:length => 80) %></dd>
</dl>
</td>
<td class="list_actions" >
<%= link_to 'Show', p %><br/>
<%= link_to 'Edit', edit_product_path(p) %><br/>
<%= link_to 'Destroy', p,
:confirm => 'Are you sure?',
:method => :delete %>
</td>
</tr>
<% end %>
</table>
</div>
<br />
<%= link_to 'New product', new_product_path %>
